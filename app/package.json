{
  "name": "caffeinated",
  "version": "1.0.0-beta",
  "license": "MIT",
  "author": "HelvijsAdams <support@casterlabs.co>",
  "main": "main.js",
  "repository": "https://github.com/thehelvijs/Caffeinated",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "npm install && electron .",
    "pack": "electon-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "icon": "media/app_icon.icns",
    "appId": "casterlabs.caffeinated",
    "artifactName": "Caffeinated-${version}-${os}-setup.${ext}",
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "icon": "media/app_icon.ico",
      "target": [
        {
          "target": "NSIS",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "electron-context-menu": "^2.3.0",
    "electron-dl": "^3.0.2",
    "electron-store": "^5.1.1",
    "electron-window-state": "^5.0.3",
    "express": "^4.17.1",
    "jquery": "^3.5.1",
    "node-static": "^0.7.11",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "electron": "^8.2.1",
    "electron-builder": "latest"
  }
}
